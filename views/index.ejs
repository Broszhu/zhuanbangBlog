<% include include/header.ejs%>
<div class="container">
  <%
  for(var i=0;i<articles.length;i++){
    var article=articles[i];
  %>
    <div class="media">
      <div class="media-left">
        <a href="#">
          <img src="http://gravatar.duoshuo.com/avatar/e069fb6ca153e3c272bc85beb6f85b49?s=50
          " alt=""/>
          <%=article.user.username%>
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><a href="/articles/detail/<%=article._id %>"><%=article.title%></a> </h4>
        <p><%=article.content %></p>
        <%
         if(article.poster){
            %>
            <p><img src="<%=article.poster%>"  style="width: 200px" alt=""/></p>
            <%
         }
          %>
      </div>
    </div>
  <%
  }
  %>



</div>
<% include include/footer.ejs%>
