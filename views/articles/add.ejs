<% include ../include/header.ejs%>
<%= title %>
<div class="container">
    <form action="/articles/add" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">文章的标题</label>
            <div class=" col-sm-10">
                <input type="text" class="form-control" id="username" name="username" placeholder="请输入文章的标题"/>
            </div>
        </div>
        <div class="form-group">
            <label for="content" class="col-sm-2 control-label">文章的内容</label>
            <div class=" col-sm-10">
                <textarea name="content" id="content" cols="80" rows="10" placeholder="请输入文章的内容"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-warning">提交</button>
                <button type="reset" class="btn btn-danger">重置</button>
            </div>
        </div>
    </form>
</div>

<% include ../include/footer.ejs%>